{
  "name": "vanilla-spa-seed",
  "version": "0.0.0",
  "description": "Webcomponent spa seed following open-wc recommendations",
  "author": "andyricchuiti",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.js",
    "build:watch": "rimraf dist && rollup --watch -c rollup.config.js",
    "format": "run-s format:eslint format:prettier",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "run-s lint:styles lint:eslint lint:prettier",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "lint:styles": "stylelint \"src/**/*.style.js\"",
    "serve": "serve -s ./dist",
    "start": "run-p build:watch serve",
    "storybook": "start-storybook --node-resolve --watch --open",
    "storybook:build": "build-storybook",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false"
  },
  "dependencies": {
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@open-wc/building-rollup": "^1.1.0",
    "@open-wc/demoing-storybook": "^1.0.1",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@surma/rollup-plugin-off-main-thread": "^1.4.1",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.5.0",
    "eslint": "^6.1.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.4",
    "rollup-plugin-copy": "^3.3.0",
    "serve": "^11.3.0",
    "stylelint": "^15.10.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.style.js": [
      "npm run lint:styles"
    ]
  }
}
